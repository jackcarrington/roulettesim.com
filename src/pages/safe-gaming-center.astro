---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import SEOHead from '@components/seo/SEOHead.astro'
import PageHeader from '@components/PageHeader.astro'
import { Icon } from 'astro-icon/components'

const title = 'Safe Gaming Center - Responsible Roulette Education | Roulettesim.com'
const description = 'Comprehensive safe gaming resources for roulette players. Learn about responsible gambling, access self-assessment tools, find professional support, and access family resources.'

const safeGamingSchema = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Safe Gaming Center",
  "description": "Responsible gambling resources and educational tools for roulette players",
  "url": "https://roulettesim.com/safe-gaming-center",
  "mainEntityOfPage": "https://roulettesim.com/safe-gaming-center",
  "publisher": {
    "@type": "Organization",
    "name": "Roulettesim.com",
    "url": "https://roulettesim.com"
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://roulettesim.com"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Safe Gaming Center",
        "item": "https://roulettesim.com/safe-gaming-center"
      }
    ]
  }
}
---

<DefaultLayout title={title} description={description}>
  <SEOHead 
    title={title}
    description={description}
    canonical="https://roulettesim.com/safe-gaming-center"
    openGraph={{
      title: 'Safe Gaming Center - Responsible Roulette Resources',
      description,
      image: 'https://roulettesim.com/social-preview-image.png',
      type: 'website'
    }}
    schema={safeGamingSchema}
  />

  <!-- Emergency Support Banner -->
  <section class="crisis-support-banner" aria-label="Emergency gambling support">
    <div class="container">
      <div class="crisis-banner-content">
        <Icon name="lucide:phone-call" class="crisis-icon" aria-hidden="true" />
        <div class="crisis-text">
          <h2>Need immediate help with gambling?</h2>
          <p>24/7 National Problem Gambling Helpline: <strong>1-800-522-4700</strong></p>
        </div>
        <a href="/safe-gaming-center/crisis-support" class="button color-crisis" aria-label="Get immediate crisis support">
          Get Help Now
        </a>
      </div>
    </div>
  </section>

  <PageHeader 
    title="Safe Gaming Center"
    subtitle="Learn about responsible roulette play, understand the risks, and access tools to help you maintain healthy gambling habits. Our roulette-specific resources are designed to keep gaming fun and under control."
    bgType="neutral"
    showBreadcrumbs={true}
  />

  <main class="safe-gaming-center">
    <div class="container">

      <!-- Four Primary Pathways -->
      <section class="pathways-grid" aria-label="Safe gaming resources">
        <h2 class="section-title">Choose Your Path to Safer Gaming</h2>
        
        <div class="pathways">
          <!-- Understanding Roulette Risks -->
          <article class="pathway-card">
            <div class="pathway-icon">
              <Icon name="lucide:brain" aria-hidden="true" />
            </div>
            <h3>Understanding Roulette Risks</h3>
            <p>Learn about the house edge, betting psychology, and common fallacies specific to roulette. Understand how the game works and why the casino always has an advantage.</p>
            <ul class="pathway-topics">
              <li>House edge psychology in roulette</li>
              <li>Common betting fallacies</li>
              <li>Emotional patterns in roulette play</li>
              <li>When practice becomes a problem</li>
            </ul>
            <a href="/safe-gaming-center/roulette-risks" class="button has-icon">
              Learn About Risks
              <Icon name="lucide:arrow-right" aria-hidden="true" />
            </a>
          </article>

          <!-- Personal Safety Tools -->
          <article class="pathway-card">
            <div class="pathway-icon">
              <Icon name="lucide:shield-check" aria-hidden="true" />
            </div>
            <h3>Personal Safety Tools</h3>
            <p>Access self-assessment tools and limit-setting features designed specifically for roulette players. Track your gaming habits and get personalized recommendations.</p>
            <ul class="pathway-topics">
              <li>Roulette-specific self-assessment quiz</li>
              <li>Personal time and session limits</li>
              <li>Cool-down tools and reminders</li>
              <li>Progress tracking and insights</li>
            </ul>
            <a href="/safe-gaming-center/safety-tools" class="button has-icon">
              Try Safety Tools
              <Icon name="lucide:arrow-right" aria-hidden="true" />
            </a>
          </article>

          <!-- Get Support -->
          <article class="pathway-card">
            <div class="pathway-icon">
              <Icon name="lucide:users" aria-hidden="true" />
            </div>
            <h3>Get Support</h3>
            <p>Connect with professional gambling support services, crisis counselors, and support groups. Find local resources and immediate help when you need it most.</p>
            <ul class="pathway-topics">
              <li>24/7 crisis hotlines</li>
              <li>Local professional counseling</li>
              <li>Support groups and communities</li>
              <li>Treatment program referrals</li>
            </ul>
            <a href="/safe-gaming-center/get-support" class="button has-icon">
              Find Support
              <Icon name="lucide:arrow-right" aria-hidden="true" />
            </a>
          </article>

          <!-- Family Resources -->
          <article class="pathway-card">
            <div class="pathway-icon">
              <Icon name="lucide:heart" aria-hidden="true" />
            </div>
            <h3>Family Resources</h3>
            <p>Resources for family members and friends concerned about a loved one's roulette or gambling habits. Learn how to help and where to find support.</p>
            <ul class="pathway-topics">
              <li>Recognizing warning signs</li>
              <li>How to start difficult conversations</li>
              <li>Supporting someone in recovery</li>
              <li>Family support groups</li>
            </ul>
            <a href="/safe-gaming-center/family-support" class="button has-icon">
              Family Resources
              <Icon name="lucide:arrow-right" aria-hidden="true" />
            </a>
          </article>
        </div>
      </section>

      <!-- Quick Stats Section -->
      <section class="statistics-section">
        <h2>Why Safe Gaming Matters</h2>
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number">5.26%</div>
            <div class="stat-label">House edge in American Roulette means the casino wins over time</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">2-3%</div>
            <div class="stat-label">Of adults develop problematic gambling behaviors</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Professional help is always available when you need it</div>
          </div>
        </div>
      </section>
    </div>
  </main>
</DefaultLayout>

<style lang="scss">
  .crisis-support-banner {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    color: white;
    padding: var(--space-l) 0;
    
    .crisis-banner-content {
      display: flex;
      align-items: center;
      gap: var(--space-m);
      
      @media (max-width: 768px) {
        flex-direction: column;
        text-align: center;
        gap: var(--space-s);
      }
    }
    
    .crisis-icon {
      flex-shrink: 0;
      width: 2.5rem;
      height: 2.5rem;
    }
    
    .crisis-text {
      flex: 1;
      
      h2 {
        margin: 0 0 var(--space-xs) 0;
        font-size: var(--font-size-1);
        font-weight: 700;
      }
      
      p {
        margin: 0;
        font-size: var(--font-size-0);
      }
    }
    
    .color-crisis {
      background-color: white;
      color: var(--color-danger, #dc2626);
      border: 2px solid white;
      border-radius: var(--radius-s);
      font-weight: 700;
      padding: var(--space-2xs) var(--space-s);
      transition: all var(--animation-speed-fast) var(--cubic-bezier);
      
      &:hover {
        background-color: light-dark(#f9fafb, #fef2f2);
        transform: translateY(-2px);
        box-shadow: var(--elevation-2);
      }
    }
  }

  .safe-gaming-center {
    padding: var(--space-2xl) 0;
    
    .container {
      max-width: var(--grid-max-width);
      margin: 0 auto;
      padding: 0 var(--grid-gutter);
    }
  }


  .pathways-grid {
    margin-bottom: var(--space-3xl);
    
    .section-title {
      font-size: var(--font-size-3);
      text-align: center;
      margin-bottom: var(--space-2xl);
      color: var(--foreground-color);
    }
  }

  .pathways {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    
    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: var(--space-l);
    }
  }

  .pathway-card {
    background: var(--background-color);
    border: 2px solid var(--border-color-subtle);
    border-radius: var(--radius-l);
    padding: var(--space-xl);
    transition: all var(--animation-speed-fast) var(--cubic-bezier);
    display: flex;
    flex-direction: column;
    height: 100%;
    
    &:hover {
      border-color: light-dark(var(--color-primary-300), var(--color-primary-400));
      box-shadow: var(--elevation-3);
      transform: translateY(-4px);
    }
    
    .pathway-icon {
      width: 3.5rem;
      height: 3.5rem;
      background: light-dark(var(--color-primary-100), var(--color-primary-900));
      border-radius: var(--radius-l);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: var(--space-l);
      transition: all var(--animation-speed-fast) var(--cubic-bezier);
      
      svg {
        width: 1.75rem;
        height: 1.75rem;
        color: var(--color-primary-500);
      }
    }
    
    h3 {
      font-size: var(--font-size-2);
      color: var(--foreground-color);
      margin-bottom: var(--space-s);
      line-height: 1.3;
    }
    
    p {
      color: light-dark(var(--color-neutral-700), var(--color-neutral-300));
      margin-bottom: var(--space-l);
      line-height: 1.6;
      flex-grow: 1;
    }
    
    .pathway-topics {
      list-style: none;
      margin: 0 0 var(--space-xl) 0;
      padding: 0;
      
      li {
        position: relative;
        padding-left: var(--space-m);
        margin-bottom: var(--space-s);
        color: light-dark(var(--color-neutral-600), var(--color-neutral-400));
        font-size: var(--font-size--1);
        line-height: 1.5;
        
        &::before {
          content: '•';
          position: absolute;
          left: 0;
          color: light-dark(var(--color-primary-400), var(--color-primary-300));
          font-weight: bold;
        }
      }
    }
    
    .button {
      margin-top: auto;
      align-self: flex-start;
    }
  }

  .statistics-section {
    background: light-dark(var(--color-neutral-200), var(--color-neutral-800));
    border-radius: var(--radius-l);
    padding: var(--space-2xl);
    text-align: center;
    border: 2px solid light-dark(var(--color-neutral-300), var(--color-neutral-700));
    
    h2 {
      font-size: var(--font-size-3);
      color: var(--foreground-color);
      margin-bottom: var(--space-2xl);
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-xl);
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        gap: var(--space-l);
      }
    }
    
    .stat-card {
      .stat-number {
        font-size: var(--font-size-5);
        font-weight: 700;
        color: var(--color-primary-500);
        margin-bottom: var(--space-s);
        line-height: 1.1;
      }
      
      .stat-label {
        color: var(--color-neutral-700);
        font-size: var(--font-size-0);
        line-height: 1.6;
        max-width: 30ch;
        margin: 0 auto;
      }
    }
  }

  // Dark mode support
  .darkmode {
    .crisis-support-banner {
      background: linear-gradient(135deg, #ef4444, #dc2626);
    }
    
    .pathway-icon svg {
      color: var(--color-primary-400);
    }
    
    .stat-card .stat-number {
      color: var(--color-primary-400);
    }
    
    .stat-card .stat-label {
      color: var(--color-neutral-300);
    }
  }
</style>