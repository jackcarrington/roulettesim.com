---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import SEOHead from '@components/seo/SEOHead.astro'
import SupportResourceFinder from '@components/safety/SupportResourceFinder.astro'
import { Icon } from 'astro-icon/components'

const title = 'Get Professional Support - Safe Gaming Center | Roulettesim.com'
const description = 'Access professional gambling support services, crisis counselors, and treatment resources. Get help for roulette gambling problems with 24/7 support available.'
---

<DefaultLayout title={title} description={description}>
  <SEOHead 
    title={title}
    description={description}
    canonical="https://roulettesim.com/safe-gaming-center/get-support"
    openGraph={{
      title: 'Get Professional Support - Gambling Help Resources',
      description,
      image: 'https://roulettesim.com/social-preview-image.png',
      type: 'website'
    }}
  />

  <div class="get-support-page">
    <div class="container">
      <!-- Breadcrumb Navigation -->
      <nav class="breadcrumb" aria-label="Breadcrumb navigation">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/safe-gaming-center">Safe Gaming Center</a></li>
          <li aria-current="page">Get Support</li>
        </ol>
      </nav>

      <!-- Emergency Crisis Banner -->
      <section class="crisis-banner" aria-label="Emergency support">
        <div class="crisis-content">
          <div class="crisis-icon">
            <Icon name="lucide:phone-call" />
          </div>
          <div class="crisis-info">
            <h2>In Crisis? Get Immediate Help</h2>
            <div class="crisis-numbers">
              <div class="hotline">
                <strong>Gambling Crisis:</strong> <a href="tel:1-800-522-4700">1-800-522-4700</a>
              </div>
              <div class="hotline">
                <strong>Suicide Prevention:</strong> <a href="tel:988">988</a>
              </div>
            </div>
            <p>Both hotlines are available 24/7 with trained counselors</p>
          </div>
        </div>
      </section>

      <!-- Page Header -->
      <header class="page-header">
        <div class="header-icon">
          <Icon name="lucide:users" aria-hidden="true" />
        </div>
        <h1>Get Professional Support</h1>
        <p class="header-description">
          Connect with professional counselors, crisis support services, and treatment programs. 
          You don't have to face gambling problems alone - help is available.
        </p>
      </header>

      <!-- Support Resource Finder -->
      <SupportResourceFinder showCrisisFirst={true} />

      <!-- Support Types Section -->
      <section class="support-types">
        <h2>Types of Professional Support</h2>
        <div class="types-grid">
          
          <article class="support-type">
            <div class="type-icon crisis">
              <Icon name="lucide:phone-call" />
            </div>
            <h3>Crisis Support</h3>
            <p>Immediate help for gambling emergencies, suicidal thoughts, or severe distress.</p>
            <div class="type-features">
              <div class="feature">
                <Icon name="lucide:clock" />
                <span>24/7 Availability</span>
              </div>
              <div class="feature">
                <Icon name="lucide:shield" />
                <span>Confidential</span>
              </div>
              <div class="feature">
                <Icon name="lucide:phone" />
                <span>Phone & Text</span>
              </div>
            </div>
            <div class="primary-contact">
              <strong>National Helpline:</strong>
              <a href="tel:1-800-522-4700" class="crisis-number">1-800-522-4700</a>
            </div>
          </article>

          <article class="support-type">
            <div class="type-icon counseling">
              <Icon name="lucide:user-check" />
            </div>
            <h3>Professional Counseling</h3>
            <p>Individual therapy with licensed counselors specializing in gambling addiction.</p>
            <div class="type-features">
              <div class="feature">
                <Icon name="lucide:calendar" />
                <span>Scheduled Sessions</span>
              </div>
              <div class="feature">
                <Icon name="lucide:brain" />
                <span>CBT & Other Methods</span>
              </div>
              <div class="feature">
                <Icon name="lucide:video" />
                <span>In-Person & Online</span>
              </div>
            </div>
            <div class="primary-contact">
              <strong>Find Counselors:</strong>
              <span>Use resource finder above</span>
            </div>
          </article>

          <article class="support-type">
            <div class="type-icon groups">
              <Icon name="lucide:users" />
            </div>
            <h3>Support Groups</h3>
            <p>Connect with others who understand gambling addiction in peer-led support groups.</p>
            <div class="type-features">
              <div class="feature">
                <Icon name="lucide:users-2" />
                <span>Peer Support</span>
              </div>
              <div class="feature">
                <Icon name="lucide:calendar-days" />
                <span>Regular Meetings</span>
              </div>
              <div class="feature">
                <Icon name="lucide:globe" />
                <span>Online & Local</span>
              </div>
            </div>
            <div class="primary-contact">
              <strong>Gamblers Anonymous:</strong>
              <a href="https://www.gamblersanonymous.org" target="_blank">gamblersanonymous.org</a>
            </div>
          </article>

          <article class="support-type">
            <div class="type-icon treatment">
              <Icon name="lucide:building-2" />
            </div>
            <h3>Treatment Programs</h3>
            <p>Intensive outpatient or inpatient programs for severe gambling addiction.</p>
            <div class="type-features">
              <div class="feature">
                <Icon name="lucide:clock" />
                <span>Intensive Support</span>
              </div>
              <div class="feature">
                <Icon name="lucide:heart-handshake" />
                <span>Comprehensive Care</span>
              </div>
              <div class="feature">
                <Icon name="lucide:users" />
                <span>Group & Individual</span>
              </div>
            </div>
            <div class="primary-contact">
              <strong>Find Programs:</strong>
              <span>Call helpline for referrals</span>
            </div>
          </article>
        </div>
      </section>

      <!-- What to Expect Section -->
      <section class="what-to-expect">
        <h2>What to Expect When Getting Help</h2>
        <div class="expectations-grid">
          
          <div class="expectation-card">
            <div class="expectation-number">1</div>
            <h3>Initial Contact</h3>
            <p>Your first call or session will focus on understanding your situation and immediate needs. You won't be judged - professionals are trained to help.</p>
          </div>

          <div class="expectation-card">
            <div class="expectation-number">2</div>
            <h3>Assessment</h3>
            <p>A professional will assess your gambling patterns, impact on your life, and any other mental health concerns to develop the right treatment plan.</p>
          </div>

          <div class="expectation-card">
            <div class="expectation-number">3</div>
            <h3>Treatment Planning</h3>
            <p>Together, you'll create a personalized plan that might include counseling, support groups, financial counseling, and family therapy.</p>
          </div>

          <div class="expectation-card">
            <div class="expectation-number">4</div>
            <h3>Ongoing Support</h3>
            <p>Recovery is a process. You'll have ongoing support to help you develop healthy coping strategies and maintain your progress.</p>
          </div>
        </div>
      </section>

      <!-- Navigation to Other Sections -->
      <section class="related-sections">
        <h2>More Safe Gaming Resources</h2>
        <div class="sections-grid">
          <a href="/safe-gaming-center/roulette-risks" class="section-card">
            <div class="section-icon">
              <Icon name="lucide:brain" />
            </div>
            <h3>Understanding Roulette Risks</h3>
            <p>Learn about roulette-specific psychological patterns and risk factors.</p>
          </a>
          
          <a href="/safe-gaming-center/safety-tools" class="section-card">
            <div class="section-icon">
              <Icon name="lucide:shield-check" />
            </div>
            <h3>Personal Safety Tools</h3>
            <p>Access self-assessment quizzes and limit-setting tools.</p>
          </a>
          
          <a href="/safe-gaming-center/family-support" class="section-card">
            <div class="section-icon">
              <Icon name="lucide:heart" />
            </div>
            <h3>Family Resources</h3>
            <p>Help for family members concerned about a loved one's gambling.</p>
          </a>
        </div>
      </section>
    </div>
  </div>
</DefaultLayout>

<style lang="scss">
  .get-support-page {
    padding: var(--space-xl) 0;
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--space-m);
    }
  }

  .breadcrumb {
    margin-bottom: var(--space-l);
    
    ol {
      display: flex;
      list-style: none;
      padding: 0;
      margin: 0;
      gap: var(--space-s);
      font-size: var(--font-size--1);
      
      li {
        display: flex;
        align-items: center;
        
        &:not(:last-child)::after {
          content: 'â€º';
          margin-left: var(--space-s);
          color: var(--color-neutral-500);
        }
        
        a {
          color: var(--color-primary-500);
          text-decoration: none;
          
          &:hover {
            text-decoration: underline;
          }
        }
        
        &[aria-current="page"] {
          color: var(--color-neutral-600);
        }
      }
    }
  }

  .crisis-banner {
    background: linear-gradient(135deg, #dc2626, #b91c1c);
    color: white;
    padding: var(--space-l);
    border-radius: var(--radius-l);
    margin-bottom: var(--space-3xl);
    
    .crisis-content {
      display: flex;
      align-items: center;
      gap: var(--space-l);
      
      @media (max-width: 768px) {
        flex-direction: column;
        text-align: center;
        gap: var(--space-m);
      }
    }
    
    .crisis-icon {
      width: 4rem;
      height: 4rem;
      flex-shrink: 0;
      
      svg {
        width: 100%;
        height: 100%;
      }
    }
    
    .crisis-info {
      flex: 1;
      
      h2 {
        font-size: var(--font-size-2);
        margin-bottom: var(--space-m);
      }
      
      .crisis-numbers {
        display: flex;
        flex-direction: column;
        gap: var(--space-s);
        margin-bottom: var(--space-m);
        
        @media (min-width: 768px) {
          flex-direction: row;
          gap: var(--space-l);
        }
        
        .hotline {
          strong {
            display: inline-block;
            margin-right: var(--space-xs);
          }
          
          a {
            color: white;
            font-weight: 700;
            font-size: var(--font-size-1);
            text-decoration: underline;
            
            &:hover {
              text-decoration: none;
            }
          }
        }
      }
      
      p {
        margin: 0;
        opacity: 0.9;
      }
    }
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
    
    .header-icon {
      width: 4rem;
      height: 4rem;
      margin: 0 auto var(--space-l);
      background: var(--color-primary-100);
      border-radius: var(--radius-l);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-primary-500);
      
      svg {
        width: 2rem;
        height: 2rem;
      }
    }
    
    h1 {
      font-size: var(--font-size-5);
      color: var(--foreground-color);
      margin-bottom: var(--space-m);
    }
    
    .header-description {
      font-size: var(--font-size-1);
      color: var(--color-neutral-700);
      max-width: 60ch;
      margin: 0 auto;
      line-height: 1.6;
    }
  }

  .support-types {
    margin: var(--space-3xl) 0;
    
    h2 {
      text-align: center;
      margin-bottom: var(--space-xl);
      color: var(--foreground-color);
    }
    
    .types-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-l);
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
      }
    }
  }

  .support-type {
    background: var(--background-color);
    border: 2px solid var(--border-color-subtle);
    border-radius: var(--radius-l);
    padding: var(--space-l);
    transition: all var(--animation-speed-fast) var(--cubic-bezier);
    
    &:hover {
      border-color: var(--color-primary-300);
      transform: translateY(-2px);
      box-shadow: var(--elevation-2);
    }
    
    .type-icon {
      width: 3rem;
      height: 3rem;
      border-radius: var(--radius-m);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: var(--space-m);
      
      svg {
        width: 1.5rem;
        height: 1.5rem;
      }
      
      &.crisis {
        background: #fecaca;
        color: #dc2626;
      }
      
      &.counseling {
        background: var(--color-primary-100);
        color: var(--color-primary-500);
      }
      
      &.groups {
        background: var(--color-secondary-100);
        color: var(--color-secondary-500);
      }
      
      &.treatment {
        background: #f3e8ff;
        color: #8b5cf6;
      }
    }
    
    h3 {
      font-size: var(--font-size-2);
      color: var(--foreground-color);
      margin-bottom: var(--space-s);
    }
    
    p {
      color: var(--color-neutral-700);
      line-height: 1.6;
      margin-bottom: var(--space-m);
    }
    
    .type-features {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-s);
      margin-bottom: var(--space-m);
      
      .feature {
        display: flex;
        align-items: center;
        gap: var(--space-xs);
        padding: var(--space-xs) var(--space-s);
        background: var(--color-neutral-200);
        border-radius: var(--radius-s);
        font-size: var(--font-size--1);
        
        svg {
          width: 1rem;
          height: 1rem;
          color: var(--color-neutral-600);
        }
      }
    }
    
    .primary-contact {
      padding: var(--space-s);
      background: var(--color-neutral-100);
      border-radius: var(--radius-s);
      font-size: var(--font-size--1);
      
      strong {
        display: block;
        margin-bottom: var(--space-xs);
        color: var(--foreground-color);
      }
      
      .crisis-number {
        font-weight: 700;
        font-size: var(--font-size-0);
        color: #dc2626;
        text-decoration: none;
        
        &:hover {
          text-decoration: underline;
        }
      }
      
      a {
        color: var(--color-primary-500);
        text-decoration: none;
        
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }

  .what-to-expect {
    margin: var(--space-3xl) 0;
    
    h2 {
      text-align: center;
      margin-bottom: var(--space-xl);
      color: var(--foreground-color);
    }
    
    .expectations-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-l);
      
      @media (max-width: 768px) {
        grid-template-columns: 1fr;
      }
    }
    
    .expectation-card {
      background: var(--background-color);
      border: 2px solid var(--border-color-subtle);
      border-radius: var(--radius-l);
      padding: var(--space-l);
      text-align: center;
      
      .expectation-number {
        width: 3rem;
        height: 3rem;
        background: var(--color-primary-500);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: var(--font-size-1);
        margin: 0 auto var(--space-m);
      }
      
      h3 {
        font-size: var(--font-size-1);
        color: var(--foreground-color);
        margin-bottom: var(--space-s);
      }
      
      p {
        color: var(--color-neutral-700);
        line-height: 1.6;
        margin: 0;
      }
    }
  }

  .related-sections {
    h2 {
      text-align: center;
      margin-bottom: var(--space-xl);
      color: var(--foreground-color);
    }
    
    .sections-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-l);
    }
    
    .section-card {
      display: block;
      background: var(--background-color);
      border: 2px solid var(--border-color-subtle);
      border-radius: var(--radius-l);
      padding: var(--space-l);
      text-decoration: none;
      transition: all var(--animation-speed-fast) var(--cubic-bezier);
      
      &:hover {
        border-color: var(--color-primary-300);
        transform: translateY(-2px);
        box-shadow: var(--elevation-2);
      }
      
      .section-icon {
        width: 3rem;
        height: 3rem;
        background: var(--color-primary-100);
        color: var(--color-primary-500);
        border-radius: var(--radius-m);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: var(--space-m);
        
        svg {
          width: 1.5rem;
          height: 1.5rem;
        }
      }
      
      h3 {
        font-size: var(--font-size-1);
        color: var(--foreground-color);
        margin-bottom: var(--space-s);
      }
      
      p {
        color: var(--color-neutral-700);
        line-height: 1.6;
        margin: 0;
      }
    }
  }

  // Dark mode adjustments
  .darkmode {
    .crisis-banner {
      background: linear-gradient(135deg, #ef4444, #dc2626);
    }
    
    .support-type,
    .expectation-card,
    .section-card {
      background: var(--color-neutral-800);
      border-color: var(--color-neutral-700);
      
      &:hover {
        border-color: var(--color-primary-400);
      }
    }
    
    .type-features .feature {
      background: var(--color-neutral-700);
    }
    
    .primary-contact {
      background: var(--color-neutral-700);
    }
  }
</style>