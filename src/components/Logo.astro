---
import { Image } from 'astro:assets'
import logo from '../assets/img/logo.svg'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<a href="/" class="flex items-center !no-underline">
  <Image src={logo} alt="Roulette Sim Logo" width="100" height="78" loading={loading} />
</a>

<style lang="scss">
  a {
    color: var(--foreground-color);
    
    img {
      // In dark mode, invert the logo colors to make it white
      @media (prefers-color-scheme: dark) {
        filter: invert(1) brightness(1);
      }
      
      // Also support the .darkmode class for manual dark mode toggle
      :global(.darkmode) & {
        filter: invert(1) brightness(1);
      }
    }
  }
</style>
