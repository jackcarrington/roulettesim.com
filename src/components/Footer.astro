---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-16">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Navigation</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home & Games</a></li>
          <li><a href="/strategy/">Strategy</a></li>
          <li><a href="/casinos/">Casinos</a></li>
          <li><a href="/blog/">Learn</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Learning Resources</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/strategy/basic-rules">Basic Rules</a></li>
          <li><a href="/strategy/basic-strategies">Betting Strategies</a></li>
          <li><a href="/strategy/odds-and-probability">Odds & Probability</a></li>
          <li><a href="/tools/roulette-rules-cheat-sheet">Rules Cheat Sheet</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Responsible Gaming</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/strategy/responsible-gambling">Safe Gaming Tips</a></li>
          <li><a href="/privacy-policy">Privacy Policy</a></li>
          <li><a href="/accessibility-statement">Accessibility</a></li>
          <li><a href="/terms-of-service">Terms of Service</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75]">
          Practice roulette strategy with free demo games and discover the best online casinos for real play.
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} - Roulettesim.com - Educational Roulette Platform
      </p>
      <p>
        <a href="/responsible-gambling">Play Responsibly</a> | 18+ Only
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
