---
/**
 * FeatureCard Component
 * 
 * Reusable feature/benefit card for homepage trust sections
 * Displays icon, title, and description with consistent styling
 */

import { Icon } from 'astro-icon/components';

export interface Props {
  icon: string;
  title: string;
  description?: string;
  className?: string;
}

const { 
  icon, 
  title, 
  description,
  className = '' 
} = Astro.props;
---

<div class={`feature-card ${className}`}>
  <div class="feature-card__icon">
    <Icon name={icon} />
  </div>
  
  <div class="feature-card__content">
    <h3 class="feature-card__title">{title}</h3>
    {description && (
      <p class="feature-card__description">{description}</p>
    )}
    {!description && (
      <div class="feature-card__description">
        <slot />
      </div>
    )}
  </div>
</div>

<style>
  .feature-card {
    background: var(--background-color);
    padding: var(--space-l);
    border-radius: var(--radius-l);
    border: 1px solid var(--border-color-subtle);
    transition: all var(--animation-speed-fast) var(--cubic-bezier);
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--elevation-2);
    border-color: var(--color-primary-300);
  }
  
  .feature-card__icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-200), var(--color-secondary-200));
    border-radius: var(--radius-l);
    margin-bottom: var(--space-s);
    color: var(--color-primary-500);
    transition: all var(--animation-speed-medium) var(--cubic-bezier);
  }
  
  .feature-card:hover .feature-card__icon {
    background: linear-gradient(135deg, var(--color-primary-300), var(--color-secondary-300));
    transform: scale(1.1);
  }
  
  .feature-card__icon svg {
    width: 32px;
    height: 32px;
  }
  
  .feature-card__content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .feature-card__title {
    font-size: var(--font-size-1);
    font-weight: 700;
    color: var(--foreground-color);
    margin-bottom: var(--space-s);
  }
  
  .feature-card__description {
    color: var(--color-neutral-700);
    line-height: 1.6;
    font-size: var(--font-size-0);
    flex-grow: 1;
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .feature-card {
      padding: var(--space-m);
    }
    
    .feature-card__icon {
      width: 56px;
      height: 56px;
    }
    
    .feature-card__icon svg {
      width: 28px;
      height: 28px;
    }
  }
</style>