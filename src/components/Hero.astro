---
import { Icon } from 'astro-icon/components'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and Lottie animation
 */
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          <slot><span class="text-gradient">Roulette</span> Simulator</slot>
        </h1>
        <p class="text-xl text-center md:text-left text-gray-600 max-w-2xl">
          Master roulette with our professional simulator. Practice with authentic casino games from top providers. Learn strategies, understand odds, and perfect your gameplay risk-free.
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="/games">
            <Icon name="lucide:play" />
            Start Playing
          </a>
          <a class="button has-icon color-secondary" href="/strategy">
            <Icon name="lucide:book-open" />
            Learn Strategies
          </a>
        </div>
      </div>
      <div class="roulette-wrapper">
        <div class="roulette-animation">
          <img 
            src="/animations/roulette-wheel.svg" 
            alt="Roulette wheel" 
            class="roulette-wheel"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .roulette-wrapper {
    display: none;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    width: 100%;
    
    @media (min-width: 768px) {
      display: flex;
    }
    
    .roulette-animation {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 400px;
      height: 400px;
      max-width: 100%;
      max-height: 100%;
      
      .roulette-wheel {
        width: 100%;
        height: 100%;
        max-width: 400px;
        max-height: 400px;
        object-fit: contain;
        transform-origin: center center;
        animation: rouletteSpin 1.5s ease-out forwards;
        animation-delay: 1s;
        will-change: transform;
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
      }
    }
  }
  
  @keyframes rouletteSpin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
