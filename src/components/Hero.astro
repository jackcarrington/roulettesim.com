---
import { Icon } from 'astro-icon/components'
import RouletteAnimation from './RouletteAnimation.tsx'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and Lottie animation
 */
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          <slot><span class="text-gradient">Roulette</span> Simulator</slot>
        </h1>
        <p class="text-xl text-center md:text-left text-gray-600 max-w-2xl">
          Master roulette with our professional simulator. Practice with authentic casino games from top providers. Learn strategies, understand odds, and perfect your gameplay risk-free.
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="/games">
            <Icon name="lucide:play" />
            Start Playing
          </a>
          <a class="button has-icon color-secondary" href="/strategy">
            <Icon name="lucide:book-open" />
            Learn Strategies
          </a>
        </div>
      </div>
      <RouletteAnimation className="hidden md:block" width={800} height={600} client:load />
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
